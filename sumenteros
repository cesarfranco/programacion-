// Autor:Cesar Franco

#include "stdafx.h"
#include <iostream>
#include "conio.h"

using namespace std;
void main ()
{
	int n,s,i;
	cout<<"Introduzca el valor de n: ";
	cin>>n;
	s=0;
	for (i=1;i<=n/2;i++)
		s=s-(i*2+1)+(i*2);
	cout<<"Suma de los primeros enteros: ";
	cout<<s;
	getch();
}
