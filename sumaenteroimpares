#include "stdafx.h"
#include <iostream>
#include "conio.h"

using namespace std;
void main ()
{
	int n,i,s;
	cout<<"Introduzca el valor de n: ";
	cin>>n;
	s=0;
	for (i=1;i<=n/2;i=i+2)
		s=s+i;
	cout<<s;
	getch();
}
