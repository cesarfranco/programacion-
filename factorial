#include "stdafx.h"
#include <iostream>
#include "conio.h"
#include "math.h"

using namespace std;
void main()
{
	int n,i,factorial;
	cout<<"Introduzca n: ";
	cin>>n;
	factorial=1;
	for(i=1;i<=n;i++)
		factorial=factorial+i;
	cout<<factorial;
	getch();


}
